{
	// HTML
	"div":{
		"prefix":"div",
		"body":[
			"<div$1>",
			"\t$2",
			"</div>"
		],
		"description":"div tag"
	},
	"h1":{
		"prefix":"h1",
		"body":[
			"<h1>$1</h1>"
		],
		"description":"h1 tag"
	},
	"h2":{
		"prefix":"h2",
		"body":[
			"<h2>$1</h2>"
		],
		"description":"h2 tag"
	},
	"h3":{
		"prefix":"h3",
		"body":[
			"<h3>$1</h3>"
		],
		"description":"h3 tag"
	},
	"li":{
		"prefix":"li",
		"body":[
			"<li>$1</li>"
		],
		"description":"li tag"
	},
	"section":{
		"prefix":"section",
		"body":[
			"<section$1>",
			"\t$2",
			"</section>"
		],
		"description":"section tag"
	},
	"ul":{
		"prefix":"ul",
		"body":[
			"<ul>",
			"\t<li>$1</li>",
			"\t<li>$2</li>",
			"\t<li>$3</li>",
			"</ul>"
		],
		"description":"ul tag"
	},

	//ERB

	"link_to":{
		"prefix":"link_to",
		"body":"<%= link_to('${1:content}', ${2:a root_path}, class: '${3s:class}') %>",
		"description":"link_to method"
	},
	"ruby_block":{
		"prefix":"ruby",
		"body":"<%$1 $2 %>",
		"description":"ruby block"
	}
}

